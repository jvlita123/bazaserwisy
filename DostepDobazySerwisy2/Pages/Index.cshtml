@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Person.Name" class="control-label"></label>
            <input asp-for="Person.Name" class="form-control" />
            <span asp-validation-for="Person.Name"
                  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Person.Surname" class="control-label"></label>
            <input asp-for="Person.Surname" class="form-control" />
            <span asp-validation-for="Person.Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Person.Year" class="control-label"></label>
            <input asp-for="Person.Year" class="form-control" />
            <span asp-validation-for="Person.Year" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary " />
        </div>




        <div class="text-center">
            <p>
                Liczba rekordów zapisanych w bieżącym dniu: @Model.AllRecordsFromToday.Count obiektów.<br /> Lista
                wszystkich osób:<br />
            </p>
            @foreach (var item in Model.AllRecordsFromToday.People)
            {
                <p>@item.FullName</p>
            }
        </div>

    </form><br />

</div>